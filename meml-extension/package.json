{
  "name": "meml-extension",
  "displayName": "MeML Meeting DSL",
  "publisher": "jfg",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:meml"
  ],
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -w -p ."
  },
  "contributes": {
    "languages": [
      {
        "id": "meml",
        "aliases": [
          "MeML",
          "meml"
        ],
        "extensions": [
          ".meml",
          ".mtg"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "meml",
        "scopeName": "text.meml",
        "path": "./syntaxes/meml.tmLanguage.json"
      }
    ],
    "keybindings": [
      {
        "command": "meml.smartEnter",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == 'meml'"
      },
      {
      "command": "meml.selectMode",
      "key": "ctrl+shift+m",
      "when": "editorLangId == meml"
    },
      {
      "command": "meml.build",
      "key": "ctrl+shift+b",
      "when": "editorLangId == meml"
    }
    ],
    "commands": [
      {
        "command": "meml.smartEnter",
        "title": "MeML: Smart Enter"
      },
      { "command": "meml.build", "title": "MeML: Build PDF", "icon": "$(play)" },
    { "command": "meml.setModeAgenda", "title": "Switch to Agenda Mode" },
    { "command": "meml.setModeChair", "title": "Switch to Chair Mode" },
    { "command": "meml.setModeMinutes", "title": "Switch to Minutes Mode" }
    ],
    "menus": {
    "editor/title": [
      {
        "when": "resourceLangId == meml",
        "command": "meml.build",
        "group": "navigation"
      }
    
    ]
  },
    "configuration": {
  "title": "MeML",
  "properties": {
    "meml.outputPath": {
      "type": "string",
      "default": "compiled_pdfs",
      "description": "Where to save compiled PDFs. Can be an absolute path or relative to the .meml file."
    }
  }
}
  },
  "dependencies": {
    "path": "^0.12.7",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/vscode": "^1.70.0",
    "typescript": "^5.0.0"
  }
}
